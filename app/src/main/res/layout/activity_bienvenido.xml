<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BienvenidoActivity" android:background="@color/common_google_signin_btn_text_light_pressed">
    <TextView
            android:text="Instant Lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/titulo" android:textSize="42sp"
            android:layout_marginTop="8dp" android:textColor="@color/common_google_signin_btn_text_dark_default"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/hambre"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Aqui debe de i un slogan o frase pequeÃ±a para invitar a comprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/slogan" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="1.0"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Comprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registrar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@color/colorPrimary"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>
    <Button
            android:text="Ubicar cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/comprar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/registrar" android:background="@color/colorAccent"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>
</androidx.constraintlayout.widget.ConstraintLayout>